<script>
let s=JSON.parse(localStorage.getItem("s"))||[],
b=id=>document.getElementById(id),
f=["name","roll","reg","branch","dept","sec","college","cgpa"];

show();

document.getElementById("form").onsubmit=e=>{
e.preventDefault();
let o={}; f.forEach(x=>o[x]=b(x).value);
b("i").value===""?s.push(o):s[b("i").value]=o;
localStorage.setItem("s",JSON.stringify(s));
swal("Success","Data saved","success");
b("i").value="";
e.target.reset();
show();
};

function show(){
body.innerHTML="";
s.forEach((x,i)=>body.innerHTML+=`
<tr>${f.map(k=>`<td>${x[k]}</td>`).join("")}
<td>
<button class="btn btn-warning btn-sm" onclick="edit(${i})">Edit</button>
<button class="btn btn-danger btn-sm" onclick="del(${i})">Delete</button>
</td></tr>`);
}

function edit(i){f.forEach(k=>b(k).value=s[i][k]);b("i").value=i}
function del(i){
swal({title:"Delete?",icon:"warning",buttons:true}).then(ok=>{
if(ok){s.splice(i,1);localStorage.setItem("s",JSON.stringify(s));show()}
});
}
</script>

</body>
</html>
